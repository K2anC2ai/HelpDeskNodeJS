<!-- views/edit_queue.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Queue</title>
</head>
<body>
    <h1>Edit Queue</h1>
    <form action="/update-queue" method="POST">
        <table>
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Description</th>
                    <th>Priority Level</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                    <tr>
                        <td><%= ticket.ticketId %></td>
                        <td><%= ticket.description %></td>
                        <td>
                            <input type="number" name="queue[<%= ticket.ticketId %>][priorityLevel]" value="<%= ticket.priorityLevel !== null ? ticket.priorityLevel : 1 %>" />
                            <input type="hidden" name="queue[<%= ticket.ticketId %>][queueId]" value="<%= ticket.queueId !== null ? ticket.queueId : 0 %>" />
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <button type="submit">Update Queue</button>
    </form>
</body>
</html>
