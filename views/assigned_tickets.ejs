<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assigned Tickets</title>
    <link rel="stylesheet" href="/styles.css"> <!-- เชื่อมโยง CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <nav>
        <a href="/">Home</a>
        <a href="/tickets/new">New Ticket</a>
        <a href="/logout">Logout</a>
    </nav>

    <div class="container">
        <h1>Assigned Tickets</h1>

        <!-- Dropdown สำหรับเลือกสถานะ -->
        <div class="filter-container">
            <label for="statusFilter">Filter by Status:</label>
            <select id="statusFilter">
                <option value="All">All</option>
                <option value="Assigned">Assigned</option>
                <option value="In Progress">In Progress</option>
                <option value="Resolved">Resolved</option>
                <option value="Closed">Closed</option>
            </select>
        </div>

        <!-- ตารางแสดงตั๋ว -->
        <table id="ticketsTable">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tickets.forEach(ticket => { %>
                    <tr class="ticket-row" data-status="<%= ticket.status %>" style="color: black;">
                        <td><%= ticket.ticketId %></td>
                        <td><%= ticket.description %></td>
                        <td><%= ticket.status === 'In Progress' ? 'In Progress' : ticket.status %></td>
                        <td class="actions">
                            <% if (ticket.status !== 'Resolved') { %>
                                <form action="/tickets/<%= ticket.ticketId %>/solve" method="POST" class="action-form">
                                    <button type="submit" <% if (ticket.status === 'In Progress') { %> disabled <% } %>>Start Solving</button>
                                </form>
                            <% } %>
                            <form action="/tickets/<%= ticket.ticketId %>/resolve" method="POST" class="action-form">
                                <input type="text" name="solution" placeholder="Enter solution" required>
                                <button type="submit" <% if (ticket.status !== 'In Progress') { %> disabled <% } %>>Resolve</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>



    <script>
        // ฟังก์ชันสำหรับกรองตั๋วตามสถานะ
        document.getElementById('statusFilter').addEventListener('change', function () {
            const selectedStatus = this.value;
            const ticketRows = document.querySelectorAll('.ticket-row');

            ticketRows.forEach(row => {
                const ticketStatus = row.getAttribute('data-status');
                if (selectedStatus === 'All' || ticketStatus === selectedStatus) {
                    row.classList.remove('hidden');
                } else {
                    row.classList.add('hidden');
                }
            });
        });
    </script>
</body>
</html>
